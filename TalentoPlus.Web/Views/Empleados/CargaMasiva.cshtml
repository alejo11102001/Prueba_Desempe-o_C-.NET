@{
    ViewData["Title"] = "Carga Masiva";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">游늭 Importaci칩n Masiva de Empleados</h3>
        </div>
        <div class="card-body">
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
                </div>
            }

            <p class="text-muted">
                Seleccione el archivo Excel (.xlsx) con la n칩mina actualizada. 
                El sistema actualizar치 los empleados existentes y crear치 los nuevos.
            </p>

            <!-- Agregamos el ID y el onsubmit -->
            <form id="formCarga" asp-action="ProcesarExcel" method="post" enctype="multipart/form-data" onsubmit="mostrarCarga()">
                
                <div class="mb-4">
                    <label class="form-label fw-bold">Archivo Excel</label>
                    <input type="file" name="archivoExcel" class="form-control form-control-lg" accept=".xlsx" required />
                </div>

                <!-- SECCI칍N DE BOTONES -->
                <div id="seccionBotones">
                    <button type="submit" class="btn btn-success btn-lg">
                        游 Procesar Archivo
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
                </div>

                <!-- SECCI칍N DE CARGA (Oculta por defecto) -->
                <div id="seccionCarga" style="display:none;" class="text-center mt-3">
                    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <h4 class="mt-2 text-primary">Procesando datos, por favor espere...</h4>
                    <small class="text-muted">Esto puede tardar unos segundos dependiendo del tama침o del archivo.</small>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- SCRIPT SIMPLE PARA EFECTO VISUAL -->
<script>
    function mostrarCarga() {
        // 1. Ocultar los botones para evitar doble clic
        document.getElementById('seccionBotones').style.display = 'none';
        
        // 2. Mostrar la animaci칩n de carga
        document.getElementById('seccionCarga').style.display = 'block';
        
        // El formulario se enviar치 naturalmente despu칠s de esto
    }
</script>