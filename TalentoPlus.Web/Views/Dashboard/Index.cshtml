                <div class="card-body">
                    <h1 class="card-title text-center">@Model.TotalEmpleados</h1>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Empleados Activos</div>
                <div class="card-body">
                    <h1 class="card-title text-center">@Model.EmpleadosActivos</h1>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">En Vacaciones</div>
                <div class="card-body">
                    <h1 class="card-title text-center">@Model.EmpleadosEnVacaciones</h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Secci칩n de Inteligencia Artificial -->
