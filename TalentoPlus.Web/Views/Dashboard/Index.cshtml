                    <input type="text" name="pregunta" class="form-control" placeholder="Escribe tu pregunta aqu칤..." required>
                    <button class="btn btn-dark" type="submit">Consultar</button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.RespuestaIA))
            {
                <div class="alert alert-info mt-3">
                    <strong>Respuesta:</strong> @Model.RespuestaIA
                </div>
            }
        </div>
    </div>
</div>